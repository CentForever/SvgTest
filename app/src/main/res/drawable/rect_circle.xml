<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/rect_circle_normal" android:state_pressed="false"/>
    <item android:drawable="@drawable/rect_circle_pressed" android:state_checkable="true"/>
    <item android:drawable="@drawable/rect_circle_pressed" android:state_pressed="true"/>
    <item android:drawable="@drawable/rect_circle_pressed" android:state_focused="true"/>
    <item android:drawable="@drawable/rect_circle_pressed" android:state_selected="true"/>

    <item android:drawable="@drawable/rect_circle_pressed" android:state_enabled="true"/>
    <!-- 触摸时并且当前窗口处于交互状态 -->
    <item android:state_pressed="true" android:state_window_focused="true" android:drawable= "@drawable/rect_circle_pressed" />
    <!--  触摸时并且没有获得焦点状态 -->
    <item android:state_pressed="true" android:state_focused="false" android:drawable="@drawable/rect_circle_pressed" />
    <!--选中时的图片背景-->
    <item android:state_selected="true" android:drawable="@drawable/rect_circle_pressed" />
    <!--获得焦点时的图片背景-->
    <item android:state_focused="true" android:drawable="@drawable/rect_circle_pressed" />
    <!-- 窗口没有处于交互时的背景图片 -->
    <item android:drawable="@drawable/rect_circle_normal" />
</selector>
